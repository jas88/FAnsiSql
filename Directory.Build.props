<Project>
  <PropertyGroup>
    <!-- Central version management -->
    <VersionPrefix>0.0.8</VersionPrefix>
    <AssemblyVersion>3.2.8</AssemblyVersion>
    <FileVersion>3.2.8</FileVersion>

    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>preview</LangVersion>
    <Nullable>enable</Nullable>

    <!-- Enable trim analysis for AOT compatibility validation -->
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <EnableAOTAnalyzer>true</EnableAOTAnalyzer>
    <EnableSingleFileAnalyzer>true</EnableSingleFileAnalyzer>

    <!-- Treat trim/AOT warnings as informational (can upgrade to warnings/errors later) -->
    <TrimmerSingleWarn>false</TrimmerSingleWarn>
  </PropertyGroup>
</Project>